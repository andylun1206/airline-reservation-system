<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/button_modify_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify Search"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".05"
        android:weightSum="1">

        <TextView
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="15"
            android:text=" Departure Flight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="35sp"
            android:layout_weight=".5"/>

        <TextView
            android:id="@+id/departurePrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="35sp"
            android:layout_paddingRight= "10dp"
            android:layout_weight=".5"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".05"
        android:weightSum = "1">

        <TextView
            android:id="@+id/trip_summary_from1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="From"
            android:textSize="35sp"
            android:layout_weight=".5"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/trip_summary_to1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textSize="35sp"
            android:layout_weight=".5"
            android:text="To"
            android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:text="Departure Time:"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrival Time:"
            android:textSize="25sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        android:weightSum = "1">

        <TextView
            android:id="@+id/trip_summary_dateDep1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="depart"
            android:textSize="35sp"
            android:layout_weight=".5"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <TextView
            android:id="@+id/trip_summary_dateArrive1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textSize="35sp"
            android:layout_weight=".5"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="arrive" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="0.28"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_tripSummary1"
            android:layout_width="105dp"
            android:layout_height="95dp"
            app:srcCompat="@mipmap/ic_aircanada" />

        <TextView
            android:id="@+id/trip_summary_depDuration"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:text="Duration"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="35sp" />
    </LinearLayout>

    <!--return flight-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.07"
        android:weightSum="1">

        <TextView
            android:id="@+id/returnFlight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight=".5"
            android:text="Return Flight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/retPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight=".5"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="35sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.05"
        android:weightSum="1">

        <TextView
            android:id="@+id/trip_summary_from2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight=".5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="35sp"
            android:text="From" />

        <TextView
            android:id="@+id/trip_summary_to2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight=".5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="35sp"
            android:text="To" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textSize="25sp"
            android:text="Departure Time:" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:textSize="25sp"
            android:text="Arrival Time:" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/trip_summary_dateDep2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="35sp"
            android:layout_weight=".5"
            android:text="depart" />

        <TextView
            android:id="@+id/trip_summary_dateArrive2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="arrive"
            android:layout_weight=".5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="35sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="0.28"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_tripSummary2"
            android:layout_width="105dp"
            android:layout_height="95dp"
            app:srcCompat="@mipmap/ic_aircanada"  />

        <TextView
            android:id="@+id/trip_summary_retDuration"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:text="Duration"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="35sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight=".05">

        <TextView
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="35sp"
            android:layout_weight=".5"
            android:text="Total: " />

        <TextView
            android:id="@+id/view_trip_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="35sp"
            android:gravity="right"
            android:layout_weight=".5"
            android:text="price" />
    </LinearLayout>

    <Button
        android:id="@+id/button_go_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to payment"
        android:textSize="25sp"/>


</LinearLayout>