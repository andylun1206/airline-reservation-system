<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/button_modify_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify Search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.21">

        <TextView
            android:id="@+id/editText"
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:ems="15"
            android:text=" Departure Flight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/departurePrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="right"
            android:text="hi"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.28">

        <TextView
            android:id="@+id/trip_summary_from1"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="From"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/trip_summary_to1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:textSize="25sp"
            android:text="To"
            android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Departure Time:" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrival Time:" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.21">

        <TextView
            android:id="@+id/trip_summary_dateDep1"
            android:layout_width="191dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="depart"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <TextView
            android:id="@+id/trip_summary_dateArrive1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="arrive" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="0.28"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_tripSummary1"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:srcCompat="@mipmap/ic_aircanada" />

        <TextView
            android:id="@+id/trip_summary_depDuration"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:text="Duration"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="25sp" />
    </LinearLayout>

    <!--return flight-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.28">

        <TextView
            android:id="@+id/returnFlight"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Return Flight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/retPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.04">

        <TextView
            android:id="@+id/trip_summary_from2"
            android:layout_width="194dp"
            android:layout_height="41dp"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25sp"
            android:text="From" />

        <TextView
            android:id="@+id/trip_summary_to2"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25sp"
            android:text="To" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Departure Time:" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrival Time:" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trip_summary_dateDep2"
            android:layout_width="191dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25sp"
            android:text="depart" />

        <TextView
            android:id="@+id/trip_summary_dateArrive2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="arrive"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_tripSummary2"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:srcCompat="@mipmap/ic_aircanada" />

        <TextView
            android:id="@+id/trip_summary_retDuration"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25sp"
            android:text="Duration" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText2"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp"
            android:text="Total: " />

        <TextView
            android:id="@+id/view_trip_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp"
            android:gravity="right"
            android:text="price" />
    </LinearLayout>

    <Button
        android:id="@+id/button_go_payment"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="Go to payment" />


</LinearLayout>